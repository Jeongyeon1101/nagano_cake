<h2>商品一覧(全<%= Item.count %>件)</h2>

<% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <%= image_tag item.get_image(200,100) %>
  <% end %>
  <%= item.name %>
  ¥<%= item.add_tax_price.to_s(:delimited) %>
<% end %></br>

<%= paginate @items %>

<% @genres.each do |genre| %></br>
<%= link_to genre.name, items_path(genre_name: genre.name) %>
<% end %>