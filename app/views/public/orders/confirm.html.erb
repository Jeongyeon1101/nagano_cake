<h2>注文情報確認</h2>

<table>
    <thead>
        <th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image(70,50) %> <%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <% @order.total_payment += cart_item.subtotal %>
        </tr>
    <% end %>
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
      <td>商品合計</td>
      <td><%= @order.total_payment %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td><%= @order.total_payment + @order.shipping_cost %></td>
    </tr>
    </tbody>
</table>

<h2>支払方法 <%= @order.payment_method_i18n %></h2>
<h2>お届け先 <%= @order.address %></h2>
