<h2>会員情報編集</h2>
<%= form_with model: @customer, url:my_page_update_path, method: :patch do |f| %>
  <label for="inputLastName">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputLastName", placeholder:"山田"%>
  <label for="inputFirstName"></label>
  <%= f.text_field :first_name, id:"inputFirstName", placeholder:"太郎"%>
  <label for="inputLastNameKana">フリガナ</label>
  <%= f.text_field :last_name_kana, id:"inputLastNameKana", placeholder:"ヤマダ"%>
  <label for="inputFirstNameKana"></label>
  <%= f.text_field :first_name_kana, id:"inputFirstNameKana", placeholder:"タロウ"%>
  <label for="inputPostalCode">郵便番号</label>
  <%= f.text_field :postal_code, id:"inputPostalCode", placeholder:"0000000"%>
  <label for="inputAddress">住所</label>
  <%= f.text_field :address, id:"inputAddress", placeholder:"東京都大田区田園調布南565-11"%>
  <label for="inputTelephoneNumber">電話番号</label>
  <%= f.text_field :telephone_number, id:"inputTelephoneNumber", placeholder:"00000000000"%>
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email, id:"inputEmail", placeholder:"sample@example.com"%>
  <%= f.submit "編集内容を保存" %>　　<%= link_to "退会する", customers_confirm_path %>
<% end %>








