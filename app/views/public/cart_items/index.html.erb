<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
<table>
    <thead>
        <th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th></th>
        <th>合計金額</th>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.get_image(70,50) %> <%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= "数量変更(セレクトボックス)" %><%= link_to "変更" %></td>
          <td><%= cart_item.subtotal %></td>
          <% @total += cart_item.subtotal %>
        </tr>
    <% end %>
    </tbody>
</table>