<h2>配送先編集</h2>

<%= form_with model: @address, url: address_path do |f| %>
  <label for="address_postal_code">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code, id:"address_postal_code" %></br>
  <label for="address_address">住所</label>
  <%= f.text_field :address, id:"address_address" %></br>
  <label for="address_name">宛名</label>
  <%= f.text_field :name, id:"address_name" %></br>
  <%= f.submit "変更内容を保存" %>
<% end %>