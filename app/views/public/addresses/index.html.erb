<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path do |f| %>
  <label for="inputPostalCode">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code, id:"inputPostalCode" %></br>
  <label for="inputAddress">住所</label>
  <%= f.text_field :address, id:"inputAddress" %></br>
  <label for="inputName">宛名</label>
  <%= f.text_field :name, id:"inputName" %></br>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %> <%= link_to "削除する" %></td>
    </tr>
    <% end %>
  </tbody>

</table>