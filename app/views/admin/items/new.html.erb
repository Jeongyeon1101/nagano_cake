<h2>商品新規登録</h2>
<%= form_with model: @item do |f| %>
  <label for="inputImage">商品画像</label>
  <%= f.file_field :image, accept: "image/*" %></br>
  <label for="inputItemName">商品名</label>
  <%= f.text_field :name, id:"inputItemName" %></br>
  <label for="inputIntroduction">商品説明</label>
  <%= f.text_field :introduction, id:"inputIntroduction" %></br>

  <!--ここにセレクトボックスとラジオボタンを追加-->
  <%= f.submit "新規登録" %>
<% end %>