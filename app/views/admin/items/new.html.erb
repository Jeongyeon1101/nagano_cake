<div class="container">
  <div class="row mt-3">
    <h2>商品新規登録</h2>
  </div>
  <div class="row mt-3">
    <table class="table table-borderless">
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <tr>
        <td><label for="inputImage">商品画像</label></td>
        <td><%= f.file_field :image, id:"inputImage", accept: "image/*" %></td>
      </tr>
      <tr>
        <td><label for="inputItemName">商品名</label></td>
        <td><%= f.text_field :name, id:"inputItemName" %></td>
      </tr>
      <tr>
        <td><label for="inputIntroduction">商品説明</label></td>
        <td><%= f.text_area :introduction, id:"inputIntroduction" %></td>
      </tr>
      <tr>
        <td><label>ジャンル</label></td>
        <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
      </tr>
      <tr>
        <td><label for "inputPrice">税抜価格</label></td>
        <td><%= f.text_field :price, id:"inputPrice" %></td>
      </tr>
      <tr>
        <td><label>販売ステータス</label></td>
        <td>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active_true, "販売中" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active_false, "販売停止中" %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </div>
  </div>
</div>