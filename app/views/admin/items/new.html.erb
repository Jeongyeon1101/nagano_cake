<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <label for="inputImage">商品画像</label>
  <%= f.file_field :image, id:"inputImage", accept: "image/*" %></br>
  <label for="inputItemName">商品名</label>
  <%= f.text_field :name, id:"inputItemName" %></br>
  <label for="inputIntroduction">商品説明</label>
  <%= f.text_area :introduction, id:"inputIntroduction" %></br>
  <label>ジャンル</label>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></br>
  <label for "inputPrice">税抜価格</label>
  <%= f.text_field :price, id:"inputPrice" %></br>
  <label>販売ステータス</label>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_true, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active_false, "販売停止中" %>
  <%= f.submit "新規登録" %>
<% end %>