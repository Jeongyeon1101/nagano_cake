<h1>商品編集ページ</h1>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <label for="item_image">商品画像</label>
  <%= f.file_field :image, id:"item_image", accept: "image/*" %></br>
  <label for="item_name">商品名</label>
  <%= f.text_field :name, id:"item_name" %></br>
  <label for="item_introduction">商品説明</label>
  <%= f.text_area :introduction, id:"item_introduction" %></br>
  <label>ジャンル</label>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></br>
  <label for "item_price">税抜価格</label>
  <%= f.text_field :price, id:"item_price" %></br>
  <label>販売ステータス</label>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_true, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active_false, "販売停止中" %>
  <%= f.submit "変更を保存" %>
<% end %>