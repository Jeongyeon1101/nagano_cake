<div class="container">
  <div class="row mt-3">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row mt-3">
    <table class="table table-hover">
      <thead class="thead-light">
        <th>購入日時</th><th>購入者</th><th>注文個数</th><th>注文ステータス</th>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= link_to admin_order_path(order_detail.order.id), class: "text-dark" do %>
                <%= order_detail.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
          </td>
          <td><%= order_detail.order.name %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row mt-2">
    <%= paginate @order_details %>
  </div>
</div>