<h2>会員一覧</h2>

<table>
  <thead>
    <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.last_name %><%= customer.first_name %></td>
      <td><%= customer.email %></td>
      <% if customer.is_deleted %>
        <td>無効</td>
      <% else %>
        <td>有効</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>
