<div class="container">
  <div class="row mt-3">
    <h2>ジャンル一覧・追加</h2>
  </div>
  <div class="row mt-3">
    <div class="col-lg-6 ml-2">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <label for="inputGenreName">ジャンル名</label>
        <%= f.text_field :name, autofocus: true, id:"inputGenreName", placeholder:"ジャンル名"%>
        <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-8 float-left">
      <table class="table table-hover">
        <thead>
          <th>ジャンル</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>